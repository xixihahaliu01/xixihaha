    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/person_img1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:layout_marginLeft="60dp"
            android:src="@drawable/person_inf" />

        <TextView
            android:id="@+id/person_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_img1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginLeft="60dp"
            android:text="个人信息" />

        <ImageView
            android:id="@+id/person_img2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:layout_toRightOf="@+id/person_img1"
            android:layout_marginLeft="60dp"
            android:src="@drawable/person_setting" />

        <TextView
            android:id="@+id/person_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_img2"
            android:layout_alignLeft="@+id/person_img2"
            android:textColor="@color/black"
            android:textSize="24sp"

            android:text="高级设置" />

    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:numColumns="3"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"
        android:id="@+id/person_gridview"
        android:divider="@drawable/divider"
        android:showDividers="end"
        >

    </GridView>
